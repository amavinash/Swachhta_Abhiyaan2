<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/bg_whitecurve">

    <TextView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"
        android:text="Username"/>

    <EditText
        android:id="@+id/passworddialog_username_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:singleLine="true"
        android:imeOptions="actionNext">

        <requestFocus/>
    </EditText>

    <TextView
        android:id="@+id/codedisplayfrag_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/passworddialog_username_edt"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <EditText
        android:id="@+id/passworddialog_password_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/codedisplayfrag_code_tv"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/codedisplayfrag_code_tv"
        android:singleLine="true"
        android:ems="10"
        android:inputType="textPassword"/>
	<CheckBox
         android:id="@+id/checkBox1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/passworddialog_submit_btn"
         android:layout_below="@+id/passworddialog_password_edt"
         android:text="Download data from server." />
	
    <TextView
        android:id="@+id/passworddialog_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_margin="2dp"
        android:ems="4"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/checkBox1"
        android:text="Submit"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/bg_bevelbutton"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <TextView
        android:id="@+id/passworddialog_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_margin="2dp"
        android:ems="4"
        android:layout_toLeftOf="@+id/passworddialog_submit_btn"
        android:layout_below="@+id/checkBox1"
        android:text="Cancel"
        android:gravity="center"
        android:background="@drawable/bg_bevelbutton"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/versiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/passworddialog_cancel_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/codedisplayfrag_code_tv"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>