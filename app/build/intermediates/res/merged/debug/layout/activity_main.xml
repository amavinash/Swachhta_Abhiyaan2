<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainactivity_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffdddddd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mainactivity_topbar_tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/mainactivity_topbar_imglocationstatus"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff666666"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/mainactivity_topbar_imglocationstatus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector_trans_to_grey"
            android:padding="24dp"
            android:src="@drawable/ic_locationstatus_inactive"/>

        <ImageView
            android:id="@+id/mainactivity_topbar_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/banner"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/mainactivity_fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>